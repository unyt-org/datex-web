{
    "name": "@unyt/datex",
    "version": "0.0.12",
    "license": "MIT",
    "exports": {
        ".": "./src/mod.ts",
        "./default": "./src/default.ts",
        "./interface-impls/webrtc": "./src/network/interface-impls/webrtc.ts",
        "./interface-impls/websocket-server-deno": "./src/network/interface-impls/websocket-server-deno.ts"
    },
    "compilerOptions": {
        "noImplicitOverride": true,
        "lib": [
            "deno.window",
            "dom"
        ]
    },
    "tasks": {
        "debug": "deno run -A scripts/build-wasm.ts --profile debug --features debug",
        "release": "deno run -A scripts/build-wasm.ts --profile release",

        "debug-no-opt": "deno task debug --no-opt",
        "test": "deno task debug && deno test -A",
        "test-no-build": "deno test -A",

        "build-npm": "deno run -A scripts/build-npm.ts",
        "build-bundle": "deno run -A scripts/build-bundle.ts",

        "browser-demo": "deno task debug-no-opt && deno task build-npm && cd test/datex-browser-demo && npm install && npm run dev",
        "browser-demo-no-build": "deno task build-npm && cd test/datex-browser-demo && npm install && npm run dev",

        "fmt": "deno fmt && cargo fmt",
        "lint": "deno lint --fix && cargo clippy --fix --features debug"
    },
    "fmt": {
        "indentWidth": 4,
        "exclude": [
            "./npm"
        ]
    },
    "imports": {
        "@david/path": "jsr:@david/path@^0.2.0",
        "@deno/dnt": "jsr:@deno/dnt@^0.42.1",
        "@deno/wasmbuild": "https://jsr.io/@deno/wasmbuild/0.20.0/lib/commands/build_command.ts",
        "@qnighy/dedent": "jsr:@qnighy/dedent@^0.1.2",
        "@std/assert": "jsr:@std/assert@^1.0.15",
        "@std/cli": "jsr:@std/cli@^1.0.23",
        "@std/encoding": "jsr:@std/encoding@^1.0.10",
        "@std/fmt": "jsr:@std/fmt@^1.0.8",
        "@std/fs": "jsr:@std/fs@^1.0.19",
        "@std/uuid": "jsr:@std/uuid@^1.0.9",
        "@unyt/speck": "jsr:@unyt/speck@^0.0.10",
        "datex/": "./src/"
    },
    "test": {
        "exclude": [
            "./npm"
        ]
    },
    "publish": {
        "exclude": [
            ".github",
            ".gitmodules",
            ".rustfmt.toml",
            ".vscode",
            "Cargo.toml",
            "Cargo.lock",
            ".cargo",
            "rust-toolchain.toml",
            "scripts",
            "test",
            "rs-lib",
            "!src/datex-web/datex_web.wasm",
            "!src/datex-web/datex_web.internal.js"
        ]
    }
}
